{
	"name": "tojs-web-components-talk",
	"description": "Demo project for the web components talk for Toronto JS",
	"main": "src/index.html",
	"private": true,
	"version": "1.0.0",
	"license": "MIT",
	"type": "module",
	"engines": {
		"node": ">=20.0.0"
	},
	"volta": {
		"node": "20.11.1"
	},
	"scripts": {
		"postinstall": "husky install",
		"start": "vite",
		"start:sw": "vite",
		"typecheck": "tsc --noEmit",
		"lint:js": "eslint --fix --ignore-path .gitignore 'src/**/*.{js,ts,mjs,mts}'",
		"lint:css": "stylelint **/*.css --fix",
		"lint": "npm run typecheck && npm run lint:js && npm run lint:css",
		"lint-staged": "lint-staged",
		"build": "vite build",
		"prepreview": "npm run build",
		"preview": "vite preview --port 3000",
		"test:coverage": "vitest run --coverage"
	},
	"devDependencies": {
		"@commitlint/cli": "^18.6.1",
		"@commitlint/config-conventional": "^18.6.2",
		"@types/node": "^20.11.19",
		"@typescript-eslint/eslint-plugin": "^7.0.1",
		"@typescript-eslint/parser": "^7.0.1",
		"eslint": "^8.56.0",
		"husky": "^9.0.11",
		"lint-staged": "^15.2.2",
		"stylelint": "^16.2.1",
		"typed-query-selector": "^2.11.0",
		"typescript": "^5.3.3",
		"vite": "^5.1.7",
		"vite-plugin-pwa": "^0.18.2",
		"workbox-window": "^7.0.0"
	},
	"lint-staged": {
		"*.ts": "eslint --ext .ts --fix",
		"*.js": "eslint --ext .js --fix",
		"*.css": "stylelint --fix"
	},
	"commitlint": {
		"extends": [
			"@commitlint/config-conventional"
		]
	},
	"dependencies": {
		"idb": "^8.0.0"
	},
	"overrides": {
		"has": "npm:@nolyfill/has@latest",
		"isarray": "npm:@nolyfill/isarray@latest",
		"string.prototype.matchall": "npm:@nolyfill/string.prototype.matchall@latest"
	}
}
